# ============================================================================
# Uwu Swap - Environment Variables
# ============================================================================

# Frontend (NEXT_PUBLIC_*)
# These are exposed to the browser.

# Which Solana cluster the UI should target.
NEXT_PUBLIC_SOLANA_CLUSTER=mainnet-beta

# Client-side RPC endpoint for wallet transactions.
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Feature flags
NEXT_PUBLIC_QUICK_SEND_ENABLED=false


# ============================================================================
# Server (Next.js API routes)
# ============================================================================

# Solana RPC used server-side.
# Recommended: use a reliable paid provider for production.
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Server-side cluster selector.
SOLANA_CLUSTER=mainnet-beta

# Commitment used for server-side Solana reads/confirmations.
SOLANA_COMMITMENT=confirmed


# ============================================================================
# Supabase (server-side persistence)
# ============================================================================

SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=


# ============================================================================
# Privy (for managed burner wallets)
# ============================================================================

PRIVY_APP_ID=
PRIVY_APP_SECRET=

# Optional: Privy authorization signing key (P-256 private key, PEM or base64)
PRIVY_AUTHORIZATION_PRIVATE_KEY=

# Optional: CAIP2 chain id for Privy
# mainnet-beta: solana:5eykt4UsFv8P8NJdTREpY1vzqKqZKvdp
# devnet: solana:EtWTRABZaYq6iMfeYKouRu166VU2xqa1
SOLANA_CAIP2=


# ============================================================================
# Uwu Swap Configuration
# ============================================================================

# $UWU token mint address - holders get free transfers
UWU_TOKEN_MINT=

# $SHIP token mint address - holders get free transfers
SHIP_TOKEN_MINT=SHIPgqTfn5FYNxGDLdcar9NbMEiMCo5mMepH6oG3zzb

# Treasury wallet for collecting fees from non-$UWU holders
UWU_TREASURY_WALLET=

# Fee payer for routing hop transactions (base58 secret key)
# If unset, each burner wallet pays its own fees
ESCROW_FEE_PAYER_SECRET_KEY=


# ============================================================================
# Optional
# ============================================================================

# OpenAI (for conversational Nana chat)
OPENAI_API_KEY=
# Optional model override (default: gpt-4o-mini)
OPENAI_MODEL=

# Optional: inline override for agent personality JSON (serverless-friendly)
AGENT_PROFILE_JSON=

# Audit webhook for logging transfers
AUDIT_WEBHOOK_URL=
